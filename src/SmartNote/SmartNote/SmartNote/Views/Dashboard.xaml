<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SmartNote.Views.Dashboard">
  <ContentView.Content>
        <Grid BackgroundColor="#FFFFFF" >
            <Grid.RowDefinitions>
                <RowDefinition Height=".90*"/>
                <RowDefinition Height=".10*"/>
            </Grid.RowDefinitions>

            <!--This is content view-->
            <Grid Grid.Row="0" BackgroundColor="#FFFFFF"/>
            
            <!--This is tabbed bar-->
            <Grid Grid.Row="1" BackgroundColor="#FF0000">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.20*"/>
                    <ColumnDefinition Width="0.20*"/>
                    <ColumnDefinition Width="0.20*"/>
                    <ColumnDefinition Width="0.20*"/>
                    <ColumnDefinition Width="0.20*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"  HeightRequest="48" BackgroundColor="#FFFFFF"/>
                <Grid Grid.Column="1" HeightRequest="48" BackgroundColor="#FFFFFF"/>
                <Grid Grid.Column="2"  BackgroundColor="#17BF5A"/>
                <Grid Grid.Column="3" HeightRequest="48" BackgroundColor="#FFFFFF"/>
                <Grid Grid.Column="4"  HeightRequest="48" BackgroundColor="#FFFFFF"/>
            </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>
